@model NewsUpdateDTO

@{
    ViewBag.PageTitle = "Update news";
}


<form enctype="multipart/form-data" asp-controller="Home" asp-action="Update" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ShortDescription" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ShortDescription" class="form-control" />
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Content" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImageFile" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <div class="custom-file">
                <input asp-for="ImageFile" class="form-control custom-file-input" />
                <label class="custom-file-label">Click here if you want to change image...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary float-sm-right m-1">Save</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary float-sm-right m-1">Cancel</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>